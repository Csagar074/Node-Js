    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet"> -->

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script> 
 <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Inter", sans-serif;
            background: #f4f6f9;
            padding: 30px;
        }

        h1 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 700;
            color: #333;
        }

        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.08);
        }

        th {
            background: #0d6efd;
            color: white;
            padding: 12px;
            font-size: 16px;
            font-weight: 600;
            text-align: left;
        }

        td {
            padding: 12px;
            color: #444;
            border-bottom: 1px solid #e6e6e6;
        }

        tr:hover {
            background: #f1f7ff;
        }

        button {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        .delete-btn {
            background: rgba(255, 0, 0, 0.15);
        }

        .delete-btn i {
            color: #c40000;
        }

        .edit-btn {
            background: rgba(0, 119, 255, 0.15);
        }

        .edit-btn i {
            color: #004a87;
        }

        a {
            text-decoration: none;
        }

        .back-link {
            text-align: center;
            margin-top: 25px;
            display: block;
            font-size: 18px;
            color: #0d6efd;
            font-weight: 600;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <h1>User Data Table</h1>

    <table cellpadding="10">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>

        <% allUsers.map((User)=>{ %>
            <tr>
                <td><%= User.Id %></td>
                <td><%= User.Name %></td>
                <td><%= User.Email %></td>
                <td><%= User.Password %></td>
                <td><%= User.Phone %></td>
                <td><%= User.Address %></td>

               <td>
    <a href="/deleteUser?Id=<%= User.Id %>" class="delete-btn">
      <button type="button" class="btn btn-success">Delete</button>
    </a>
</td>

<td>
    <a href="/updateUser%>" class="edit-btn">
        <button type="button" class="btn btn-info">Edit</button>
    </a>
</td>
            </tr>
        <% }) %>
    </table>

    <a class="back-link" href="/">â¬… Back to Form Page</a>

</body>

</html>
