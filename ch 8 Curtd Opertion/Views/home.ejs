<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Poppins", sans-serif;
            background: #f4f6f9;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
            font-weight: 600;
        }

        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            overflow: hidden;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0px 5px 18px rgba(0, 0, 0, 0.1);
        }

        th {
            background: #4c6ef5;
            color: #fff;
            padding: 14px;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        td {
            padding: 14px;
            font-size: 15px;
            color: #444;
            text-align: center;
            border-bottom: 1px solid #eaeaea;
        }

        tr:hover td {
            background: #f1f4ff;
            transition: 0.3s;
        }

        tr:last-child td {
            border-bottom: none;
        }
    </style>
</head>

<body>
    <h1>All Users</h1>

    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>

        <% allUsers.map((user) => { %>
        <tr>
            <td><%= user.Id %></td>
            <td><%= user.Name %></td>
            <td><%= user.Email %></td>
            <td><%= user.Password %></td>
            <td><%= user.Phone %></td>
            <td><%= user.Address %></td>
        </tr>
        <% }) %>
    </table>
</body>

</html>
