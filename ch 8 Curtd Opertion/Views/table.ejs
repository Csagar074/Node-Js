<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Table</title>

     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f6f9;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.12);
        }

        th {
            background: #1e3a8a;
            color: white;
            padding: 12px;
            font-size: 15px;
            text-transform: uppercase;
        }

        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

    </style>
</head>

<body>

    <h1>User Data Table</h1>

    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>

        <% allUsers.map((user) => { %>
            <tr>
                <td><%= user.Id %></td>
                <td><%= user.Name %></td>
                <td><%= user.Email %></td>
                <td><%= user.Password %></td>
                <td><%= user.Phone %></td>
                <td><%= user.Address %></td>

                <td>
                    <a href="/deleteUser?Id=<%= user.Id %>">
                             <button type="button" class="btn btn-danger">Delete</button>
                        </button>
                    </a>
                </td>

                <td>
                    <a href="/edit?Id=<%= user.Id %>">
                             <button type="button" class="btn btn-info">Edit</button>
                        </button>
                    </a>
                </td>
            </tr>
        <% }) %>

    </table>

    <center>
        <a href="/addUserPage" class="btn btn-info">+ Add User</a>
    </center>

</body>

</html>
